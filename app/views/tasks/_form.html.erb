<div class="field">
    <%= form.label :status %>
    <%= form.select :status, options_for_select([['Pending', 'Pending'], ['In_Progress', 'In_Progress'], ['Done', 'Done']] , selected: :status ) %>
</div>
  

  <div class="field">
    <%= form.label :due_date %>
    <%= form.date_select :due_date %>
  </div>

  <div class="field">
    <%= form.label :label %>
    <%= form.text_field :label %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
